<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.daschubbm.alkchievements">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".LoadingAlktivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainAlktivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginAlktivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BillAlktivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AchievementsAlktivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsAlktivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StockAlktivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NoConnectionAlktivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MessageEditorAlktivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".NotificationService"
            android:enabled="true" />

        <activity android:name=".RegisterAlktivity"></activity>
    </application>

</manifest>