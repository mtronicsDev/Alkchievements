<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.daschubbm.alkchievements.SettingsAlktivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrechnung"
            android:id="@+id/button"
            android:tag="billing"
            android:onClick="performRequestedAction"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/pinText"
                android:layout_weight="1"
                android:hint="PIN (4-stellig)"
                android:maxLength="4" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pin 채ndern"
                android:id="@+id/pinButton"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:tag="change_pin"
                android:onClick="performRequestedAction"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Getr채nkeliste:"
            android:id="@+id/textView3"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/add_drink_name"
                android:layout_weight="3"
                android:hint="Neues Getr채nk" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:id="@+id/add_drink_price"
                android:layout_weight="1"
                android:hint="Preis" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hinzuf체gen"
                android:id="@+id/add_drink_button"
                android:layout_weight="3"
                android:tag="add_drink"
                android:onClick="performRequestedAction"/>
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:id="@+id/loading"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/settings_list"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
